{
  "useTabs": true,
  "overrides": [
    {
      "files": "*.md",
      "options": {
        "printWidth": 100,
        "useTabs": false,
        "trailingComma": "es5",
        "arrowParens": "avoid",
        "proseWrap": "never",
        "endOfLine": "lf",
        "semi": false,
        "singleQuote": true,
        "tabWidth": 2
      }
    }
  ]
}
